<%= javascript_include_tag "application" %>
<%- model_class = Beacon -%>
<div class="page-header">
  <h2><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h2>
</div>
<%= form_tag beacons_path, :method => 'get', :id => "beacons_search" do %>
  <p>
    <%= text_field_tag :search, params[:search], :autocomplete => :off %>
    <%= submit_tag "Search", :name => nil %>
	<div id="search"><%= render 'beacons/search' %></div>
  </p>
<% end %>
			  
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= sortable "name" %></th>
	  <th><%= "Factory" %></th>
	  <th><%= "Description" %></th>
	  <th><%= "Latitude" %></th>
	  <th><%= "Longitude" %></th>
	  <th><%= "Owner Id" %></th>
	  <th><%= "Created At" %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @beacons.each do |beacon| %>
      <tr>
        <td><%= beacon.name %></td>
        <td><%= beacon.factory_id %></td>
        <td><%= beacon.description %></td>
        <td><%= beacon.latitude %></td>
        <td><%= beacon.longitude %></td>
        <td><%= beacon.owner_id %></td>
        <td><%=l beacon.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_beacon_path(beacon), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      beacon_path(beacon),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>