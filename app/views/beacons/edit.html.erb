<%- model_class = Beacon -%>
<div class="page-header">
  <h1><%=t '.title', :default => [:'helpers.titles.edit', 'Edit %{model}'], :model => model_class.model_name.human.titleize %></h1>
</div>
<%= form_for @beacon, :html => { :class => "form-horizontal beacon" } do |f| %>

    <% if @beacon.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@beacon.errors.count, "error") %> prohibited this beacon from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @beacon.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control', :autocomplete => :off %>
    </div>
    <%= error_span(@beacon[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :factory_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :factory_id, :class => 'form-control', readonly: true %>
    </div>
    <%= error_span(@beacon[:factory_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'form-control', :autocomplete => :off %>
    </div>
    <%= error_span(@beacon[:description]) %>
  </div>
  <div class="control-group">
    <%= f.label :latitude, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :latitude, :class => 'form-control', :autocomplete => :off %>
    </div>
    <%= error_span(@beacon[:latitude]) %>
  </div>
  <div class="control-group">
    <%= f.label :longitude, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :longitude, :class => 'form-control', :autocomplete => :off %>
    </div>
    <%= error_span(@beacon[:longitude]) %>
  </div>

  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.back', :default => t("helpers.links.back")),
            :back, :class => 'btn btn-default' %>

<% end %>
