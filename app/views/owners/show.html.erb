<%= javascript_include_tag "application" %>
<%- model_class = Owner -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @owner.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:image) %>:</strong></dt>
  <dd><%= @owner.image %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @owner.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:owner_type) %>:</strong></dt>
  <dd><%= @owner.owner_type %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              owners_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_owner_path(@owner), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              owner_path(@owner),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
		

<div id="beacons"><%= render 'beacons/beacons' %></div>


<%= link_to t('.new', :default => t("helpers.links.new")),
            new_beacon_path(@owner, :id => @owner.id),
            :class => 'btn btn-primary' %>
